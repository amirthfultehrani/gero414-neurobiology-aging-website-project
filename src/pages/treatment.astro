// src/pages/treatment.astro
import BaseLayout from '../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL;
const pageTitle = "Alzheimer's Disease: Treatment & Management Strategies";

const breadcrumbs = [
  { label: "Home", href: `${base}/` },
  { label: "Treatment", href: `${base}/treatment/` }
];

// Helper function to render inline citations consistently - High contrast
function renderCitation(text: string): string {
  const textString = String(text);
  return `<code class="inline-block align-baseline text-[0.7rem] font-normal not-italic bg-slate-200 dark:bg-slate-700 text-slate-700 dark:text-slate-200 px-1.5 py-0.5 rounded-sm mx-0.5 border border-slate-300 dark:border-slate-600 transition-colors duration-150 hover:bg-slate-300 dark:hover:bg-slate-600">${textString.replace(/[\[\]()]/g, '')}</code>`;
}

